<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/bus_searchView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:clickable="true"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/city"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="梅州" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/searchkey"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="center"
            android:text="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路公交"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/search"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:onClick="searchButtonProcess"
                android:text="开始" />

            <Button
                android:id="@+id/nextline"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:onClick="SearchNextBusline"
                android:text="下一条" />
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <fragment
            android:id="@+id/bmapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            class="com.baidu.mapapi.map.SupportMapFragment"
            android:clickable="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp">
            <include layout="@layout/jump_btn" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_marginBottom="60dip">

            <Button
                android:id="@+id/pre"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:layout_weight="1.0"
                android:background="@drawable/route_plan_pre"
                android:onClick="nodeClick" />

            <Button
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dip"
                android:layout_weight="1.0"
                android:background="@drawable/route_plan_next"
                android:onClick="nodeClick" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <include layout="@layout/map_type" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/fab_add_bus"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="60dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ripple"
            android:elevation="2dp"
            android:src="@drawable/ic_action_add"
            android:stateListAnimator="@anim/anim"
            android:translationZ="120dp" />

    </RelativeLayout>

</RelativeLayout>